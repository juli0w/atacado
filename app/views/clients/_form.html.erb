<%= form_for @client do |f| %>
  <div class="card-content">
    <div class="row">
      <div class="input-field col s12 m6">
        <%= f.label :email, "Identificador único" %>
        <%= f.text_field :email, id: "email" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :company, "Razão social" %>
        <%= f.text_field :company %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s5">
        <%= f.label :name, "Contato" %>
        <%= f.text_field :name %>
      </div>
      <div class="input-field col s4">
        <%= f.label :birthday, 'Aniversário', class: "active" %>
        <%= f.date_field :birthday %>
      </div>
      <div class="input-field col s3">
        <%= f.label :phone, "Telefone" %>
        <%= f.text_field :phone %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :address, "Endereço" %>
        <%= f.text_field :address %>
      </div>
      <div class="input-field col s6">
        <%= f.label :district, "Bairro" %>
        <%= f.text_field :district %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s8">
        <%= f.label :city, "Cidade" %>
        <%= f.text_field :city, value: "Joinville" %>
      </div>
      <div class="input-field col s4">
        <%= f.label :uf, "Estado" %>
        <%= f.text_field :uf, value: "SC" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :cep, 'CEP' %>
        <%= f.text_field :cep %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :cpf, 'CPF/CNPJ' %>
        <%= f.text_field :cpf %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.collection_select :section_id, Section.all.order(:name), :id, :name %>
        <%= f.label :section_id, 'Ramo de atuação' %>
      </div>
    </div>
  </div>
  <div class="card-action">
    <button id="submit" class="btn waves-effect waves-light light-green" type="submit" name="action">
      <%= material_icon.person_pin.css_class("left") %> Salvar
    </button>
  </div>
<% end %>

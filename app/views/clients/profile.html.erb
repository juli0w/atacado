<div class="container">
  <div class="row">
    <div class="col s12 m12 l12">
      <h4 style="margin-top: 40px;"><%= @user.company %></h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-panel">

      <%#= render "layouts/flash" %>
      <%= form_for @user, url: profile_path, method: :post do |f| %>
      <div class="row">
        <div class="input-field col s7">
          <%= f.label :name, "Contato" %>
          <%= f.text_field :name %>
        </div>
        <div class="input-field col s5">
          <%= f.label :phone, "Telefone" %>
          <%= f.text_field :phone %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.label :address, "Endereço" %>
          <%= f.text_field :address %>
        </div>
        <div class="input-field col s6">
          <%= f.label :district, "Bairro" %>
          <%= f.text_field :district %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s8">
          <%= f.label :city, "Cidade" %>
          <%= f.text_field :city %>
        </div>
        <div class="input-field col s4">
          <%= f.label :uf, "Estado" %>
          <%= f.text_field :uf %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :cep, 'CEP' %>
          <%= f.text_field :cep %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :cpf, 'CPF/CNPJ' %>
          <%= f.text_field :cpf %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.collection_select :section_id, Section.all, :id, :name, {} %>
          <%= f.label :section_id, 'Ramo de atuação' %>
        </div>
        <div class="input-field col s6">
          <%= f.label :birthday, 'Aniversário', class: "active" %>
          <%= f.date_field :birthday %>
        </div>
      </div>

        <div class="row">
          <div class="input-field col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">Salvar
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      <% end %>


    </div>
  </div>
</div>
